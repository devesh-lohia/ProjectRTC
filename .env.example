# DriveRTC Configuration Example
# Copy this file to .env and update with your values

# Server Backend Configuration
DRIVERTC_SERVER_URL=ws://localhost:8000
DRIVERTC_SERVER_HTTP_URL=http://localhost:8000

# Client Backend Configuration
DRIVERTC_SHARED_FOLDER=~/DriveRTC_Shared
DRIVERTC_CHUNK_SIZE=1048576
DRIVERTC_MAX_TRANSFERS=5
DRIVERTC_TRANSFER_TIMEOUT=300

# Frontend Configuration
REACT_APP_CLIENT_BACKEND_URL=http://localhost:8001
REACT_APP_SERVER_BACKEND_URL=http://localhost:8000

# Production Examples:
# DRIVERTC_SERVER_URL=wss://your-server.firebase.app
# DRIVERTC_SERVER_HTTP_URL=https://your-server.firebase.app
# REACT_APP_CLIENT_BACKEND_URL=http://localhost:8001
# REACT_APP_SERVER_BACKEND_URL=https://your-server.firebase.app
